# .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json, tex, md, js, ts, py, lua,}]
indent_style = space
indent_size = 2

[*.{css, astro}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
